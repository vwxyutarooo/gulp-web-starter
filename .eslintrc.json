{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ignore": ["gulpfile.*", "webpack.config.*"],
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "rules": {
      "no-console": ["error", {
        "allow": ["log", "debug", "error"]
      }],
      "no-process-env": 0,
      "no-unused-vars": 1,
      "react/no-did-mount-set-state": 0,
      "react/no-danger": 0
  }
}
